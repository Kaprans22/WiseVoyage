<h2>Europe</h2>
 <div id="carouselExampleControls1" class="carousel slide">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="d-flex" style="width: 100%; justify-content: center;">
          <% @suggestions_europe[0..3].each do |suggestion| %>
            <%= link_to suggestion_path(suggestion), class: "link" do %>
              <div class="card-suggestion" style="background-image: url(<%= asset_path('TSWIFT.jpg')%>)">
                <h4><%= suggestion.title %></h4>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <% @suggestions_europe[4..11].each_slice(4) do |suggestions| %>
        <div class="carousel-item">
          <div class="d-flex" style="width: 100%; justify-content: center;">
            <% unless suggestions[0].nil? %>
              <%= link_to suggestion_path(suggestions[0]), class: "link" do %>
                <div class="card-suggestion" style="background-image: url(<%= asset_path('TSWIFT.jpg')%>)">
                  <h4><%= suggestions[0].title %></h4>
                </div>
              <% end %>
            <% end %>

            <% unless suggestions[1].nil? %>
              <%= link_to suggestion_path(suggestions[1]), class: "link" do %>
                <div class="card-suggestion" style="background-image: url(<%= asset_path('TSWIFT.jpg')%>)">
                  <h4><%= suggestions[1].title %></h4>
                </div>
              <% end %>
            <% end %>

            <% unless suggestions[2].nil? %>
              <%= link_to suggestion_path(suggestions[2]), class: "link" do %>
                <div class="card-suggestion" style="background-image: url(<%= asset_path('TSWIFT.jpg')%>)">
                  <h4><%= suggestions[2].title %></h4>
                </div>
              <% end %>
            <% end %>

            <% unless suggestions[3].nil? %>
              <%= link_to suggestion_path(suggestions[3]), class: "link" do %>
                <div class="card-suggestion" style="background-image: url(<%= asset_path('TSWIFT.jpg')%>)">
                  <h4><%= suggestions[3].title %></h4>
                </div>
              <% end %>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls1" data-bs-slide="prev">
      <img class="arrow" src="<%= asset_path('icons/arrow-left.svg') %>" alt="arrow-right"/>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls1" data-bs-slide="next">
      <img class="arrow" src="<%= asset_path('icons/arrow-rightt.svg') %>" alt="arrow-right"/>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
