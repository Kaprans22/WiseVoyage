<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>
<%= image_tag "TSWIFT.jpg" %>
<%= form_tag("/trips", method: "post", remote: true) do %>
  <div>
    <%= label_tag(:destination, "Country:") %>
    <%= text_field_tag(:destination) %>
  </div>
  <div>
    <%= label_tag(:start_date, "Start Date:") %>
    <%= text_field_tag(:start_date, nil, type: "date") %>
  </div>
  <div>
    <%= label_tag(:end_date, "End Date:") %>
    <%= text_field_tag(:end_date, nil, type: "date") %>
  </div>
  <%= submit_tag("Submit") %>
<% end %>
<main class="flex flex-col justify-items-stretch grow shrink">
  <header>
  </header>
  <%= image_tag "TSWIFT.jpg" %>
</main>
<br>
<div id="trips">
  <% @trips.each do |trip| %>
    <h2>Destination: <%= trip.destination %></h2>
    <p>Content: <%= trip.content %></p>
<%= button_to 'Delete', trip_path(trip), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
<br>
<%= button_to 'Delete All', destroy_all_trips_path, method: :delete, data: { confirm: 'Are you sure?' } %>
